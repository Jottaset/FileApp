<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:FileApp" 
             x:Class="FileApp.MainPage"
             Title="Contexto" x:Name="lbl_title">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Adicionar" Clicked="Handle_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <StackLayout>
        
        <!-- Place new controls here -->
        
        <Editor x:Name="editor_valor"
                HeightRequest="200"
                BackgroundColor="Silver"
                Margin="20, 20, 20, 0"/>
        
        <Label Text="Inicial_Label!" 
               FontSize="30"
               x:Name="lbl_inicial"
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand"/>
        
        <Button Text="Verificar Dados"
                FontSize="20"
                HorizontalOptions="Center"
                VerticalOptions="EndAndExpand"
                Clicked="VerificarDados"/>
        
        <Button Text="Quebrar String"
                FontSize="20"
                HorizontalOptions="Center"
                VerticalOptions="EndAndExpand"
                Clicked="breakString"/>
        
    </StackLayout>
</ContentPage>